package config

import (
	"gitlab.com/vicky2135/stories/commons/lameDB"
	"gitlab.com/vicky2135/stories/commons/loaders"
)

const (
	envVar = "USER_SERVICE"
)

var Config = &struct {
	InternalHostAndPort string        `json:"internalHostAndPort"`
	Mysql               *lameDB.Mysql `json:"mysql"`
}{}

func Initialize() {
	loaders.LoadJSONEnvPathOrPanic(envVar, Config)
	lameDB.Initialize(Config.Mysql)
}
