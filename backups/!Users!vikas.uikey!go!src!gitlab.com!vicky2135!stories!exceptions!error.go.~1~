package exceptions

import "net/http"

type ErrorCode int

// user service error code
const (
	DBReadErrorCode                       = 1001
	DBWriteErrCode                        = 1002
	EmailIdAlreadyRegisteredErrCode       = 2001
	MobileNumberAlreaedyRegisteredErrCode = 2002
)

// user service error message
const (
	SomethingWentWrongErrMsg        = "Something went Wrong! ̰"
	EmailIdAlreadyRegisteredErrMsg  = "User with this emailId is already registered"
	MobileNoAlreadyRegisteredErrMsg = "User with this mobile number is already registered"
)

var (
	mapErrorCodeWithMessage = map[ErrorCode]string{
		EmailIdAlreadyRegisteredErrCode:       EmailIdAlreadyRegisteredErrMsg,
		MobileNumberAlreaedyRegisteredErrCode: MobileNoAlreadyRegisteredErrMsg,
		DBReadErrorCode:                       SomethingWentWrongErrMsg,
		DBWriteErrCode:                        SomethingWentWrongErrMsg,
	}

	mapErrorCodeWithHttpStatusCode = map[ErrorCode]int{
		EmailIdAlreadyRegisteredErrCode:       http.StatusNotAcceptable,
		MobileNumberAlreaedyRegisteredErrCode: http.StatusNotAcceptable,
		DBWriteErrCode:                        http.StatusInternalServerError,
		DBReadErrorCode:                       http.StatusInternalServerError,
	}
)
